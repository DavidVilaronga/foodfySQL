<div class="card">
    
    <div id="item">Nome</div>
        <div>
            <input 
                type="text"
                name="name"
                value="{{chef.name}}"
            >
        </div>

        <div id="item">Avatar</div>
        {%if chef.path %}
        <div>
            <input 
                type="text"
                name="path"
                value="{{chef.path}}"
            >
        </div>
        {% endif %}
        <div>
            <div id="photo-upload">
                <input 
                    id="photo-input"
                    type="file" 
                    name="photo"
                    accept="image/*"
                    onchange="PhotoAvatar.handleFileInput(event)"
                >
                <p>Enviar Avatar</p>
            </div>
        </div>
    
</div>
