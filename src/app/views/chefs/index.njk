{% extends "layout.njk" %}

{% block content %}
<section>
    <div class="index">
        <div class="manager-index">
            Gerenciar chefs
        </div>
        <a href="/admin/chefs/create">Novo</a>
    </div>
</section>

<div class="content-chefs">
     {% for chef in chefs %}
    <div class="item-chefs">
        <div>
            <img src="{{chef.avatar_url}}" alt="asinhas">
        </div>
        <div>
            <h1>{{recipe.title}}</h1>
            <h2>{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}">Visualisar</a>
        </div> 
    </div>
    {% endfor %}
</div>
{% endblock %}