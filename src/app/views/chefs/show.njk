{%extends "layout.njk"%}

{% block content %}

<div class="title_chef">
    <div>Chef: {{chef.name}}</div>
    <a href="/admin/chefs/{{chef.id}}/edit/">Editar chef</a>
</div>

<div class="detail_chef">
    <div class="detail_avatar">
        <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
    </div>

    <div class="detail_recipe">
        <p>{{chef.name}}</p>
    </div>
    
    <div class="detail_by">
        <p>{{chef.total_recipes}} receitas</p>
    </div>
</div>

<section>
    <div class="index">
        <div class="manager-index">
            Receitas
        </div>
    </div>
</section>

<div class="content">
    {% for recipe in recipes %}
    <div class="item">
        <div>
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>
        <div>
            <h1>{{recipe.title}}</h1>
            <h2>{{recipe.recipe_by}}</h2>
            <a href="/admin/recipes/{{recipe.id}}">Visualisar</a>
        </div> 
    </div>
    {% endfor %}
</div>

{%endblock%}