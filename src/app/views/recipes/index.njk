{% extends "layout.njk" %}

{% block content %}
<section>
    <div class="index">
        <div class="manager-index">
            Gerenciar receitas
        </div>
        <a href="/admin/recipes/create">Nova</a>
    </div>
</section>

<div class="content">

        {% for recipe in recipes %}
        
    
        
    <div class="item">
        {% for path in paths %}
        {% if recipe.id == path.recipe_id%}
        <div>
            <img src="{{path.src}}" alt="{{path.recipe_id}}">
        </div>
        {% endif %}
        {% endfor %}
        
        
        <div>
            <h1>{{recipe.title}}</h1>
            <h2>{{recipe.chef_name}}</h2>
            <a href="/admin/recipes/{{recipe.id}}">Visualisar</a>
        </div> 

    </div>
        {% endfor %}
</div>

{% endblock content %}